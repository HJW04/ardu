#define trig D6
#define echo D7

void setup() {
  Serial.begin (115200);
  pinMode(TRIG, OUTPUT);
  pinMode(ECHO, INPUT);
}
 
void loop() {
  digitalWrite(TRIG,HIGH);
  delay(1);
  digitalWrite(ECHO, LOW);
 
  float duration = pulseIn(echo, HIGH);
  float distance = ((float)(340 * duration) / 10000)/2;
 
  Serial.print("Duration: ");
  Serial.println(duration);
  Serial.print("Distance: ");
  Serial.print(distance);
  Serial.println("cm/n");
 
  delay(1000);
}
