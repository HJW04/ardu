#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(32, 16, 2);

void setup(){

  lcd.begin(16,2);
  lcd.init();
  lcd.backlight();
  //Serial.begin(9600);
  
  float voltBin = analogRead(A0);
  float volt = 1.5*voltBin/1024;
  float battery = 100*(volt-0.2)/1.3;
  lcd.setCursor(0,0);
  
  lcd.print(volt);
  lcd.print(" V");
  lcd.setCursor(0,1);
  lcd.print(battery);
  lcd.print(" %");
  delay(5000);
  lcd.clear();
  lcd.noBacklight();
  
}
void loop(){

}
