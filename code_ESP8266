#include "FirebaseESP8266.h"
#include <ESP8266WiFi.h>

#define FIREBASE_HOST "esp8266firebase-c0d21-default-rtdb.firebaseio.com/"        // 파이어베이스 database 주소
#define FIREBASE_AUTH "H1LIBMkrhFGq0gaONtIso13ad7RACrtjdxboJwUN"            // 파이어베이스 authentication 비밀번호
#define WIFI_SSID "iptime5G"            // 연결된 wifi 이름
#define WIFI_PASSWORD "42352423"          // 와이파이 비밀번호

FirebaseData firebaseData

void setup() {
  Serial.begin(115200);

  // wifi 접속
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.println();
  Serial.print( "Connecting to Wi-Fi ");
  while (WiFi.status() != WL_CONNECTED)
  {
    Serial.print( " . " );
    delay(300);
  }
  Serial.println();
  Serial.print(" Connected with IP: ");
  Serial.println(WiFi.localIP());
  Serial.println();

  // firebase 접속 및 기본설정
  Firebase.begin(FIREBASE_HOST, FIREBASE_AUTH);
  Firebase.reconnectWiFi(true);

  firebaseeData.setBSSLBufferSize(1024,1024);
  firebaseData.setResponseSize(1024);
  Firebase.setReadTimeout(firebaseData, 1000 *60);
  Firebase.setwriteSizeLimit(firebaseData, " tiny ");

}

void loop() {
  
}
